<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--指定二级缓存的外部实现类-->
        <!--hibernate3.0的配置:<property name="cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>-->
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
        <!--为true表示将Hibernate发送给数据库的sql显示出来 -->
        <property name="show_sql">true</property>
        <!--对sql语句进行排版-->
        <property name="format_sql">true</property>
        <!-- 添加自动创建数据库表格的配置 create|update|create-drop|validate-->
        <property name="hbm2ddl.auto">update</property>
        <!-- SQL方言，这边设定的是MySQL -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- 一次读的数据库记录数 -->
        <property name="jdbc.fetch_size">50</property>
        <!-- 设定对数据库进行批量删除 -->
        <property name="jdbc.batch_size">30</property>
        <!-- 数据库用户名-->
        <property name="connection.username">root</property>
        <!-- 数据库密码-->
        <property name="connection.password">mysql</property>
        <!-- 默认数据库前缀 -->
        <property name="hibernate.default_schema">hibernate_study</property>
        <!-- 驱动程序-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <!-- JDBC URL -->
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate_study</property>
        <!--getCurrentSession配置：thread（jdbc本地事务）|jta（jta事务） -->
        <property name="current_session_context_class">thread</property>
        <!-- 映射文件 -->
        <!--配置方法1: 只配置带JPA注解的model类(class="")-->
        <!--配置方法2: 带普通的model类 和 dbm.xml(resource="")-->
        <mapping package="com.baidu.langshiquan.module"/>


    </session-factory>
</hibernate-configuration>